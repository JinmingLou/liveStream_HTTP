<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/ijk_lib__textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="~~~~select a channel~~~~"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"/>

    <Button
        android:id="@+id/ijk_lib__button1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="cctv1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"/>
    <Button
        android:id="@+id/ijk_lib__button2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="cctv2"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ijk_lib__button1"/>
    <Button
        android:id="@+id/ijk_lib__button4"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="cctv4"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ijk_lib__button2"/>
    <Button
        android:id="@+id/ijk_lib__button7"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="cctv7"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ijk_lib__button4"/>
    <Button
        android:id="@+id/ijk_lib__button10"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="cctv10"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ijk_lib__button7"/>

    <TextView
        android:id="@+id/ijk_lib__textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="~~~~or enter a channel~~~~"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"/>

    <EditText
        android:id="@+id/ijk_lib__enterChannel"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ijk_lib__textview2"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/ijk_lib__jumpChannel"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Go!"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ijk_lib__enterChannel"/>

</RelativeLayout>









